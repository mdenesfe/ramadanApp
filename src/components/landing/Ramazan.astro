<script>
document.addEventListener("DOMContentLoaded", function () {
  const root = document.documentElement;
  const modalElements = {
    installModal: document.getElementById("installModal"),
    confirmInstall: document.getElementById("confirmInstall"),
    cancelInstall: document.getElementById("cancelInstall"),
    closeModal: document.getElementById("closeModal"),
  };
  let beforeInstallPromptEvent = null;
  let cityData = {};

  window.addEventListener("beforeinstallprompt", (e) => {
    e.preventDefault();
    beforeInstallPromptEvent = e;
    modalElements.installModal.classList.toggle("hidden", false);
  });

  modalElements.confirmInstall.addEventListener("click", () => {
    if (beforeInstallPromptEvent !== null) {
      beforeInstallPromptEvent.prompt();
      beforeInstallPromptEvent.userChoice.then((choiceResult) => {
        if (choiceResult.outcome === 'accepted') {
          console.log('User accepted the A2HS prompt');
        } else {
          console.log('User dismissed the A2HS prompt');
        }
        beforeInstallPromptEvent = null;
        modalElements.installModal.classList.add("hidden");
      });
    }
  });

  modalElements.cancelInstall.addEventListener("click", () => {
    modalElements.installModal.classList.add("hidden");
  });

  modalElements.closeModal.addEventListener("click", () => {
    modalElements.installModal.classList.add("hidden");
  });

  const themeToggle = document.getElementById("themeToggle");
  const citySelect = document.getElementById("citySelect");
  const imsakTimeEl = document.getElementById("imsakTime");
  const iftarTimeEl = document.getElementById("iftarTime");
  const currentDateEl = document.getElementById("currentDateWithoutYear");
  const currentTimeEl = document.getElementById("currentTime");
  const remainingToImsakEl = document.getElementById("remainingToImsak");
  const remainingToIftarEl = document.getElementById("remainingToIftar");
  const imsakContainer = document.getElementById("remainingToImsakContainer");
  const iftarContainer = document.getElementById("remainingToIftarContainer");

  function toggleTheme(isDark) {
    root.classList.toggle("dark", isDark);
    localStorage.setItem("theme", isDark ? "dark" : "light");
    themeToggle.textContent = isDark ? "ğŸŒ" : "ğŸŒ™";
  }

  themeToggle.addEventListener("click", () => {
    const isDarkMode = root.classList.contains("dark");
    toggleTheme(!isDarkMode);
  });

  citySelect.addEventListener('change', function () {
    const selectedCity = this.value;
    localStorage.setItem('selectedCity', selectedCity);
    loadCityData(selectedCity);
  });

  function loadCityData(city) {
    fetch(`/cities/${city}.json`)
      .then(response => response.json())
      .then(data => {
        cityData = data;
        updateDateTimeDisplays();
      })
      .catch(error => console.error('Error loading city data:', error));
  }

  function updateDateTimeDisplays() {
    const now = new Date();
    const istanbulTime = new Date(now.toLocaleString("en-US", { timeZone: "Europe/Istanbul" }));
    const todayFormatted = istanbulTime.toISOString().split('T')[0];
    const cityPrayerTimes = cityData[todayFormatted] || { imsak: 'N/A', iftar: 'N/A' };

    imsakTimeEl.textContent = cityPrayerTimes.imsak;
    iftarTimeEl.textContent = cityPrayerTimes.iftar;
    currentDateEl.textContent = istanbulTime.toLocaleDateString("tr-TR", { timeZone: "Europe/Istanbul", weekday: "long", month: "long", day: "numeric" });
    currentTimeEl.textContent = istanbulTime.toLocaleTimeString("tr-TR", { timeZone: "Europe/Istanbul", hour: '2-digit', minute: '2-digit' });

    const imsakDate = new Date(`${todayFormatted}T${cityPrayerTimes.imsak}:00+03:00`);
    const iftarDate = new Date(`${todayFormatted}T${cityPrayerTimes.iftar}:00+03:00`);
    const remainingToImsak = imsakDate - istanbulTime;
    const remainingToIftar = iftarDate - istanbulTime;

    remainingToImsakEl.textContent = formatRemainingTime(remainingToImsak);
    remainingToIftarEl.textContent = formatRemainingTime(remainingToIftar);

    imsakContainer.classList.toggle("hidden", istanbulTime > imsakDate && istanbulTime < iftarDate);
    iftarContainer.classList.toggle("hidden", istanbulTime < imsakDate || istanbulTime > iftarDate);
  }

  function formatRemainingTime(milliseconds) {
    const hours = Math.floor(milliseconds / (1000 * 60 * 60));
    const minutes = Math.floor((milliseconds % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((milliseconds % (1000 * 60)) / 1000);
    return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
  }

  (function initialize() {
    const savedCity = localStorage.getItem('selectedCity') || 'Istanbul';
    citySelect.value = savedCity;
    loadCityData(savedCity);

    const isDarkMode = localStorage.getItem("theme") === "dark" || (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches);
    toggleTheme(isDarkMode);

    setInterval(updateDateTimeDisplays, 1000);
  })();

  function loadAyetData() {
    const todayFormatted = formatDate(new Date());
    fetch('/ayet/ayet.json')
      .then(response => response.json())
      .then(data => {
        if (data[todayFormatted]) {
          document.getElementById("gununAyeti").textContent = "ğŸ“– " + data[todayFormatted].gununAyeti;
          document.getElementById("gununAyetiSure").textContent = data[todayFormatted].gununAyetiSure;
        } else {
          console.error('GÃ¼nÃ¼n ayeti bulunamadÄ±.');
        }
      })
      .catch(error => console.error('Ayet bilgileri yÃ¼klenirken bir hata oluÅŸtu:', error));
  }

  loadAyetData();
  
});

</script>
