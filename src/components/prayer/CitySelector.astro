<style>
  select {
    scrollbar-width: thin;
    scrollbar-color: #cbd5e0 transparent;
  }
  
  select::-webkit-scrollbar {
    width: 6px;
  }
  
  select::-webkit-scrollbar-track {
    background: transparent;
  }
  
  select::-webkit-scrollbar-thumb {
    background-color: #cbd5e0;
    border-radius: 3px;
  }

  .dark select {
    scrollbar-color: #4a5568 transparent;
  }

  .dark select::-webkit-scrollbar-thumb {
    background-color: #4a5568;
  }

  select option {
    margin: 2px 0;
  }

  select option:checked {
    background: linear-gradient(0deg, #f97316 0%, #f97316 100%);
    color: white;
  }

  .dark select option:checked {
    background: linear-gradient(0deg, #f97316 0%, #f97316 100%);
  }
</style>

<div class="relative group">
  <select
    id="citySelect"
    name="city"
    class="text-[11px] text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white bg-transparent focus:outline-none cursor-pointer appearance-none pr-3 transition-colors"
    style="max-height: 300px;"
  >
    {cities.map((city) => (
      <option value={city.value} class="px-3 py-1.5 hover:bg-orange-50 dark:hover:bg-gray-700/50">{city.label}</option>
    ))}
  </select>
  <span class="absolute right-0 top-1/2 -translate-y-1/2 text-[8px] text-gray-400 group-hover:text-gray-600 dark:group-hover:text-gray-200 pointer-events-none transition-colors">▼</span>
